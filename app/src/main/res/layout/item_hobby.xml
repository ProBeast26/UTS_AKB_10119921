<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"

        app:cardCornerRadius="@dimen/padding16">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               android:id="@+id/card_item_hobby"
               android:layout_margin="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               app:cardCornerRadius="16dp"
               android:elevation="10dp">

               <ImageView
                   android:id="@+id/imgTourismHr"
                   android:layout_width="90dp"
                   android:layout_height="90dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/image1"
                   />

           </androidx.cardview.widget.CardView>
           <LinearLayout
               android:layout_margin="10dp"
               android:paddingRight="@dimen/padding16"
               android:layout_toRightOf="@id/card_item_hobby"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/title_hobby"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="18dp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:text="Mountaineering"
                   />
               <TextView
                   android:id="@+id/my_op_hobby"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14dp"
                   android:maxLines="2"
                   android:textColor="@color/black"
                   android:text="My favourite  hobby right now its's very nice"
                   />
               <TextView
                    android:id="@+id/my_int_des_hobby"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14dp"
                   android:textColor="@android:color/darker_gray"
                   android:textStyle="bold"
                   android:text="My interest 85%"
                   android:layout_marginTop="3dp"
                   android:layout_marginBottom="3dp"
                   />
               <com.google.android.material.progressindicator.LinearProgressIndicator
                   android:layout_width="match_parent"
                   android:indeterminate="false"
                    android:max="100"
                   android:id="@+id/progress_hobby"
                   android:progress="50"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

       </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>