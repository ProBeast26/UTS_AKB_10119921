<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/thumbnail_music"
            android:layout_width="90dp"
            android:src="@drawable/image1"
            android:scaleType="centerCrop"
            android:layout_height="75dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="14dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/card_music"
        app:layout_constraintStart_toEndOf="@+id/card_music"
        app:layout_constraintTop_toTopOf="@+id/card_music"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/band_name"
            android:text="Rex Orange County"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black_text"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/title_song"
            android:text="Sunflower"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/star"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>