<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
>
        <RelativeLayout
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/imgFood"
                android:layout_width="90dp"
                android:layout_marginTop="10dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/drinking"
                />
            <LinearLayout
                android:layout_margin="10dp"
                android:paddingRight="@dimen/padding16"
                android:layout_toRightOf="@id/imgFood"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Mountaineering"
                    />
                <TextView
                    android:id="@+id/my_op_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:text="My favourite  hobby right now its's very nice"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/rate_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black_text"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="@dimen/padding16"
                        android:layout_height="@dimen/padding16"
                        android:src="@drawable/star"
                        />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>